<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>
    <servlet>
        <servlet-name>ServletProdutos</servlet-name>
        <servlet-class>controllers.ServletProdutos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletFotos</servlet-name>
        <servlet-class>controllers.ServletFotos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletClientes</servlet-name>
        <servlet-class>controllers.ServletClientes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUsuarios</servlet-name>
        <servlet-class>controllers.ServletUsuarios</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletProdutos</servlet-name>
        <url-pattern>/produtos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletFotos</servlet-name>
        <url-pattern>/fotos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletClientes</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUsuarios</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
